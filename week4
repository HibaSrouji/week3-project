import re
f = open('english.txt', 'r')
text = f.read()
txt = re.split(' ,|; ', text)

list1 =[]
list2 = []
dictionary = {}
n = len(txt)
for i in range (n):
  if (i%2 == 1):
   list2.append(txt[i])
  else:
    list1.append(txt[i])
final = zip(list1,list2)
final1 = dict(final)

print(final1)

suffixes = {}
h = 0
list4 =[]
for x in final1:
  b = len(x)  
  if (b  > 3):
    s = x[-4] + x[-3] + x[-2] + x [-1]
    list4.append(s)

counts = dict()
def word_count(list4):


    for word in list4:
        if word in counts:
            counts[word] += 1
        else:
            counts[word] = 1

    return counts


print(word_count(list4))
number = []
for num in counts:
 number.append(counts[num])

def sort(number): 
    for x in number:
     n = len(number)

    for i in range(n):
     swapped = False
     for j in range(0, n-i-1):
            if number[j] < number[j+1] : 
               number[j], number[j+1] = number[j+1], number[j]
               swapped == True
numbers = []
sort(number)
for l in number:
  for e in counts:
    h = counts[e]
    if l == h:
     numbers.append(e)

numfinal = zip(numbers, number)
numfinal1 = dict(numfinal)
