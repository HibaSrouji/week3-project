travels= (['Canberra', '2020-12-9', '09:30', 'A'],['Singapore', '2020-12-9', '10:30', 'A'],['Seoul', '2020-12-9', '11:30', 'A'],['Tokyo', '2020-12-9', '12:30', 'A'],['Zagrep', '2020-12-9', '13:30', 'U'],['Vienna', '2020-12-9', '14:30', 'E'],['Roma', '2020-12-9', '15:30', 'E'],['Berlin', '2020-12-9', '16:30', 'E'],['Ljubljana', '2020-12-9', '17:30', 'E'],['Damascuse' , '2020-12-9', '18:30', 'A'],['Paris', '2020-12-9', '19:30', 'E'],['London', '2020-12-9', '20:30', 'E'],['Floransa', '2020-12-9', '21:30', 'E'],['London', '2020-12-9', '22:30', 'E'],['Brussels', '2020-12-9', '23:30', 'E'])


airport = 'Hiba International Airplane'
