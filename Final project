def continent():
  asia = []
  europe = []
  australia = []
  for i in travels:
    if (i[3] == 'A'):
      asia.append(i[0])
    elif (i[3] == 'E'):
      europe.append(i[0])
    else:
      australia.append(i[0])
  print('The asian flights is :')
  print(asia)
  print('The europian flights is :')
  print(europe)
  print('The australian flights is :')
  print(australia)

continent()
def destiny():
  dest = 0
  y = []
  n = len(travels)
  x = input('please inter your destination : ')
  for i in travels:
    if (x == i[0]):
      dest = dest - 1
      y.append(i)
    else:
      dest = dest + 1
  if (dest < n):
    print('there is a schedualed flight like that. ')
    print(y)
  else:
    thenewflight = []
    thenewflight.append(dest)
    print('sorry, we will schedueld it')
    yourflightdate = input('please inter your perfect date ')
    thenewflight.append(yourflightdate)
    yourflighttime = input('please enter your perfect time')
    thenewflight.append(yourflighttime)
    travels.append(thenewflight)
    print(travels)

destiny()

nearwindow = []
notnearwindow =[]


for s in range (1,201):
  if (s % 2 == 0):
    nearwindow.append(s)
  else:
    notnearwindow.append(s)


