def allflight():
  print('the whole destination is to :')
  for i in travels:
    print(i[0])

allflight()


def continent():
  asia = []
  europe = []
  australia = []
  for i in travels:
    if (i[3] == 'A'):
      asia.append(i[0])
    elif (i[3] == 'E'):
      europe.append(i[0])
    else:
      australia.append(i[0])
  print('The asian flights is :')
  print(asia)
  print('The europian flights is :')
  print(europe)
  print('The australian flights is :')
  print(australia)


def destiny():
  dest = 0
  y = []
  n = len(travels)
  x = input('please inter your destination : ')
  for i in travels:
    if (x == i[0]):
      dest = dest - 1
      y.append(i)
    else:
      dest = dest + 1
  if (dest < n):
    print('there is a schedualed flight like that. ')
    print(y)
  else:
    print('sorry, we will schedueld it soon..')

destiny()


class Travels:

  def __init__(self, nameto, date, time):
    self.nameto = nameto
    self.date = date
    self.time= time
  
  
  def theflight(self):
    print('the planned flight is travelling to ' + self.nameto + ' \non ' + self.date + ' \nat ' + self.time)


  def destiny(self):
    x = input('plaese inter your destination: ')
    if (x == self.nameto):
      print('there is a schedualed flight for that')
    else:
      print('we are sorry we will schedual it soon')


