}


def vegeterian_menu():
  for n in v_menu:
   if (v_menu[n] == 'Y'):
     print(n)
pass

vegeterian_menu()


## 4.print_dishes_ordered_by_price()
## 4.print_dishes_ordered_by_price()

def sort(price): 
    for x in price:
     n = len(price)

    for i in range(n):
     swapped = False
     for j in range(0, n-i-1):
            if price[j] > price[j+1] : 
               price[j], price[j+1] = price[j+1], price[j]
               swapped == True
           
         

price=[ 30, 25, 20, 36, 16, 18, 45, 25, 12, 30, 35]

dish_prices={
'Salmon Sushi': 30,
'Pork Dumplings': 25,
'Choziro Tacos': 20,
'Chickpea Curry': 36,
'Apple Pie': 16,
'Jollof Rice': 18,
'Dolma': 45,
'Vegetable Pho': 25,
'Kvass': 12,
'Luau': 30,
'Kabab': 35
}
sort(price)

list4 =[]
for i in price:
 for j in dish_prices:
  e = dish_prices[j]
  if i == e:
   list4.append(j)

print(list4)

