## 4.print_dishes_ordered_by_price()


def sort(price): 
    for x in price:
    n = len(price[x])

    for i in range(n):
     swapped = False
     for j in range(0, n-i-1):
            if price[j] > price[j+1] : 
               price[j], price[j+1] = price[j+1], price[j]
               swapped == True
           
     

price = (30, 25, 20, 36, 16, 18, 45, 25, 12, 30, 35)
 for i in price:
