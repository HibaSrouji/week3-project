## 6. apply_discount(price,percentage):

dish_prices={
'Salmon Sushi': 30,
'Pork Dumplings': 25,
'Choziro Tacos': 20,
'Chickpea Curry': 36,
'Apple Pie': 16,
'Jollof Rice': 18,
'Dolma': 45,
'Vegetable Pho': 25,
'Kvass': 12,
'Luau': 30,
'Kabab': 35
}

n = input('inter your dish name: ')
total_price = int(dish_prices[n])
discount = float(input('inter your discount: '))

def apply_discount(discount):
 return lambda total_price : total_price * (1 - discount)

a = apply_discount(discount)
print(a(total_price))



## 7. Get older():
 
 
 dishes={
1 :'Salmon Sushi',
2 :'Pork Dumplings',
3 : 'Choziro Tacos',
4 : 'Chickpea Curry',
5 : 'Apple Pie',
6 : 'Jollof Rice', 
7 :'Dolma',
8 :'Vegetable Pho',
9 : 'Kvass', 
10 : 'Luau', 
11 : 'Kabab'
}


x = int(input('inter the number of the dishes : '))
list2 = []
list2.append(dishes[x])
while  x > 0:
  x = int(input('inter the number of the dishes : '))
  if x > 0:
    list2.append(dishes[x])

  if  x == 0:
   break

print(list2)

list3 = []


def sum_up():
  for a in list2:
   b = int(dish_prices[a])
   list3.append(b)
  sum1 = sum(list3)
  print(sum1)


sum_up()


































































